<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Списание оборудования</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-select.css" />
    @* <link rel="stylesheet" type="text/css" href="~/lib/DataTables/datatables.min.css" /> *@
    <link rel="stylesheet" type="text/css" href="~/lib/DataTables/datatables.css" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Списание оборудования</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" asp-controller="Equipment" asp-action="Index"
                                role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Оборудование
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Equipment" asp-action="Index">Все
                                    оборудование</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Equipment" asp-action="Create">Добавить
                                    оборудование</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" asp-controller="Employee" asp-action="Index"
                                role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Сотрудники
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Employee" asp-action="Index">Все сотрудники</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Employee" asp-action="Create">Добавить
                                    сотрудника</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark" asp-controller="Decommission" asp-action="Index" role="button"
                                aria-expanded="false">
                                Списания
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Cписание оборудования
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/SheetJs/xlsx.full.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-select.min.js"></script>




    <script src="~/js/site.js" asp-append-version="true"></script>
    @* <script type="text/javascript" src="~/lib/DataTables/datatables.min.js"></script> *@
    <script type="text/javascript" src="~/lib/DataTables/datatables.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
