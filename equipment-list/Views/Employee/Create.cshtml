@model Employee
@{
    ViewData["Title"] = "Добавление сотрудника";
}

<style>
    input[type='number'] {
        -moz-appearance: textfield;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
    }
</style>

<div class="card">
    <div class="card-header">
        <div class="card-title">
            @ViewData["Title"]
        </div>
    </div>
    <a></a>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <img src="" id="photo" style="max-width: 20rem; max-height: 20rem" alt="">
            </div>
            @* <div asp-validation-summary="All"></div> *@
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control"></input>
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName"></label>
                <input asp-for="MiddleName" class="form-control">
                <span asp-validation-for="MiddleName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control">
                <span asp-validation-for="Position"></span>

            </div>
            <div class="form-group">
                <label asp-for="Department"></label>
                <input asp-for="Department" class="form-control">
                <span asp-validation-for="Department"></span>

            </div>
            <div class="form-group">
                <label asp-for="HiringDate"></label>
                <input asp-for="HiringDate" type="date" class="form-control">
                <span asp-validation-for="HiringDate"></span>
            </div>
            <button type="submit" class="btn btn-primary">Добавить</button>
        </form>
    </div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(document).ready(() => {
        $('select').select()
    });
</script>
}